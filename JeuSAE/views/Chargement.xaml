<Window
    x:Class="JeuSAE.Chargement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuSAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="fenetreChargement"
    Title="Chargement"
    Width="{x:Static SystemParameters.PrimaryScreenWidth}"
    Height="{x:Static SystemParameters.PrimaryScreenHeight}"
    FocusManager.FocusedElement="{Binding ElementName=canvasChargement}"
    FontFamily="Cascadia Mono SemiBold"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Canvas x:Name="canvasChargement"  MouseEnter="canvasChargement_MouseEnter">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF150707" Offset="1"/>
                <GradientStop Color="#FFCA0000" Offset="0"/>
            </LinearGradientBrush>
            
        </Canvas.Background>
        <Label Content="Chargement..." FontSize="92" x:Name="labChargement" Width="711" Height="117"/>
    </Canvas>
</Window>
