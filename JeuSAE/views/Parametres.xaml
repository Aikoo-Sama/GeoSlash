<Window
    x:Class="JeuSAE.Parametres"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuSAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="fenetreParametre"
    Title="Parametres"
    Width="{x:Static SystemParameters.PrimaryScreenWidth}"
    Height="{x:Static SystemParameters.PrimaryScreenHeight}"
    FocusManager.FocusedElement="{Binding ElementName=canvasParametre}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">

    <Canvas x:Name="canvasParametre">
        <Canvas.Background>
            <LinearGradientBrush MappingMode="RelativeToBoundingBox" SpreadMethod="Pad" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="1" Color="#FF022902" />
                <GradientStop Offset="0" Color="#FF5BF35D" />
            </LinearGradientBrush>


        </Canvas.Background>
        <Label
            x:Name="labParametre"
            Width="496"
            Height="117"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Paramètres"
            FontFamily="Rubik"
            FontSize="90" />
        <Label
            x:Name="labRetour"
            Height="120"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Retour"
            FontFamily="Rubik"
            FontSize="90"
            MouseLeftButtonDown="labRetour_MouseLeftButtonDown" MouseEnter="labRetour_MouseEnter" MouseLeave="labRetour_MouseLeave" Width="294" />
        <Label x:Name="labSon"
            Height="117"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Audio"
            FontFamily="Rubik"
            FontSize="70" Width="203" MouseEnter="labSon_MouseEnter" MouseLeave="labSon_MouseLeave" MouseLeftButtonDown="labSon_MouseLeftButtonDown"/>
        <Label x:Name="labTouche"
            Height="117"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Configuration des touches"
            FontFamily="Rubik"
            FontSize="70" Width="876" MouseEnter="labTouche_MouseEnter" MouseLeave="labTouche_MouseLeave" MouseLeftButtonDown="labTouche_MouseLeftButtonDown"/>


    </Canvas>


</Window>
